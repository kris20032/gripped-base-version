<!-- Product Grid Section -->
<section class="section" id="products">
  <div class="container">
    <div class="text-center mb-lg">
      <h2 style="font-family: Didot, 'Didot LT STD', 'Hoefler Text', Garamond, 'Times New Roman', serif; font-size: 56px; font-weight: 300; font-style: italic;">You're gripped. You slay.</h2>
    </div>

    <div class="text-center" style="margin-bottom: 48px; margin-top: 24px;">
      <p style="font-family: var(--font-secondary); font-size: 18px; font-weight: 400; letter-spacing: 2px; color: var(--color-gray-dark); margin: 0; text-transform: uppercase;" data-i18n="collection_subtitle">Our Collection</p>
    </div>

    <div class="product-grid">
      {% for product in collections.all.products limit: 4 %}
      <a href="{{ product.url }}" class="product-card" style="text-decoration: none; color: inherit;">
        <div class="product-image">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}" style="filter: grayscale(0%) contrast(1.1) brightness(0.98);">
          {% endif %}
          <button class="quick-add" data-i18n="quick_add" data-product-id="{{ product.variants.first.id }}">quick add</button>
        </div>
        <div class="product-info">
          <h3 class="product-name" data-i18n="product_{{ product.handle | replace: '-grip-socks', '' | replace: '-', '_' }}">{{ product.title }}</h3>
          <p class="product-price" data-price="{{ product.price | money_without_currency }}">{{ product.price | money }}</p>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
</section>

